<mvc:View xmlns:html="http://www.w3.org/1999/xhtml"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          xmlns:core="sap.ui.core"
          displayBlock="true"
          controllerName="sap-fhir-ui5-model-demo.controller.patient.PatientDetails"
          viewName="sap-fhir-ui5-model-demo.view.patient.PatientDetails">
    <Page title="Patient Details"
          showNavButton="true"
          navButtonPress="onNavBack"
          id="patientDetailsPage">
        <content>
            <VBox id="patientDetailsHeader"
                  class="patientDetailsHeader">
                <HBox alignItems="Center"
                      justifyContent="SpaceBetween"
                      class="sapUiMediumMarginBegin sapUiSmallMarginTop sapUiTinyMarginBottom patientDetailsHeaderTitleWidth"
                      height="40px">
                    <Text id="headerTitle"
                          text="{parts: [{path:'name/0/given/0'} ,{path:'name/0/family'}], formatter: '.formatPatientName'}"
                          class="patientDetailsHeaderTitle sapUiSmallMarginEnd" />
                </HBox>
            </VBox>
            <IconTabBar id="itbPatientDetails"
                        expanded="true"
                        expandable="false"
                        select="iconTabBarSelectHandler">
                <items>
                    <IconTabFilter id="tabStammdaten"
                                   text="Base Data"
                                   key="basedata"
                                   tooltip="Base Data">
                        <core:Fragment fragmentName="sap-fhir-ui5-model-demo.view.patient.fragments.PatientDetailsStammdaten"
                                       type="XML" />
                    </IconTabFilter>
                    <IconTabFilter id="tabVersicherung"
                                   text="Insurance"
                                   key="insurance"
                                   tooltip="Insurance">
                        <core:Fragment fragmentName="sap-fhir-ui5-model-demo.view.patient.fragments.PatientDetailsVersicherung"
                                       type="XML" />
                    </IconTabFilter>
                    <IconTabFilter id="tabAufnahme"
                                   text="Admission"
                                   key="admission"
                                   tooltip="Admission">
                        <core:Fragment fragmentName="sap-fhir-ui5-model-demo.view.patient.fragments.PatientDetailsAufnahme"
                                       type="XML" />
                    </IconTabFilter>
                    <IconTabFilter id="tabDiagnosen"
                                   text="Diagnoses"
                                   key="diagnoses"
                                   tooltip="Diagnoses">
                        <core:Fragment fragmentName="sap-fhir-ui5-model-demo.view.patient.fragments.PatientDetailsDiagnosen"
                                       type="XML" />
                    </IconTabFilter>
                    <IconTabFilter id="tabServices"
                                   text="Services"
                                   key="services"
                                   tooltip="Services">
                        <core:Fragment fragmentName="sap-fhir-ui5-model-demo.view.patient.fragments.PatientDetailsServices"
                                       type="XML" />
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
        <footer>
            <OverflowToolbar id="otbFooter">
                <Button id="btn_messagePopover"
                        icon="sap-icon://alert"
                        text="{=${messageModel>/}.length}"
                        visible="{=${messageModel>/}.length > 0}"
                        type="Emphasized"
                        press="onMessagePopoverPress" />
                <ToolbarSpacer />
                <Button id="btnPatientDetailsSave"
                        text="Save"
                        width="100px"
                        enabled="true"
                        press="onPatientDetailsSavePress"
                        type="Emphasized" />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>